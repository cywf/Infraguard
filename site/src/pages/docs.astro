---
import Layout from '../layouts/Layout.astro';

const docFiles = [
  { title: 'README', path: 'README.md', githubPath: '/README.md' },
  { title: 'Setup Guide', path: 'SETUP.md', githubPath: '/SETUP.md' },
  { title: 'Ansible Documentation', path: 'ansible/README.md', githubPath: '/ansible/README.md' },
  { title: 'Terraform Documentation', path: 'terraform/README.md', githubPath: '/terraform/README.md' },
  { title: 'Vault Documentation', path: 'vault/README.md', githubPath: '/vault/README.md' },
  { title: 'Nomad Documentation', path: 'nomad/README.md', githubPath: '/nomad/README.md' },
  { title: 'Packer Documentation', path: 'packer/README.md', githubPath: '/packer/README.md' },
  { title: 'Vagrant Documentation', path: 'vagrant/README.md', githubPath: '/vagrant/README.md' },
];
---

<Layout title="Infraguard - Documentation" currentPath="/docs">
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <div class="text-sm breadcrumbs mb-6">
      <ul>
        <li><a href={`${import.meta.env.BASE_URL}/`}>Home</a></li>
        <li>Documentation</li>
      </ul>
    </div>

    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Documentation</h1>
      <p class="text-lg opacity-80">
        Comprehensive guides and documentation for all components of Infraguard.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {docFiles.map((doc) => (
        <div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-shadow">
          <div class="card-body">
            <h2 class="card-title text-lg">{doc.title}</h2>
            <p class="text-sm opacity-70">{doc.path}</p>
            <div class="card-actions justify-end mt-4">
              <a 
                href={`https://github.com/cywf/Infraguard/blob/main${doc.githubPath}`}
                class="btn btn-primary btn-sm"
                target="_blank"
                rel="noopener noreferrer"
              >
                View on GitHub
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Getting Started</h2>
          <p class="mb-4">
            New to Infraguard? Start with the setup guide to get your environment configured.
          </p>
          <div class="card-actions">
            <a 
              href="https://github.com/cywf/Infraguard/blob/main/SETUP.md"
              class="btn btn-primary btn-sm"
              target="_blank"
              rel="noopener noreferrer"
            >
              Setup Guide
            </a>
          </div>
        </div>
      </div>

      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Contributing</h2>
          <p class="mb-4">
            Want to contribute? Check out our contributing guidelines to get started.
          </p>
          <div class="card-actions">
            <a 
              href="https://github.com/cywf/Infraguard/blob/main/CONTRIBUTING.md"
              class="btn btn-secondary btn-sm"
              target="_blank"
              rel="noopener noreferrer"
            >
              Contributing Guide
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="alert alert-info mt-8">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <h3 class="font-bold">Documentation Links</h3>
        <div class="text-sm">
          All documentation links open directly on GitHub for the most up-to-date content.
        </div>
      </div>
    </div>
  </div>
</Layout>
