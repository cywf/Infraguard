---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Infraguard - Discussions" currentPath="/discussions">
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <div class="text-sm breadcrumbs mb-6">
      <ul>
        <li><a href={`${import.meta.env.BASE_URL}/`}>Home</a></li>
        <li>Discussions</li>
      </ul>
    </div>

    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Discussions</h1>
      <p class="text-lg opacity-80">
        Community discussions and announcements. Join the conversation on GitHub.
      </p>
    </div>

    <div id="discussions-list" class="space-y-4">
      <div class="skeleton h-24 w-full"></div>
      <div class="skeleton h-24 w-full"></div>
      <div class="skeleton h-24 w-full"></div>
    </div>

    <div class="card bg-base-200 shadow-xl mt-8">
      <div class="card-body">
        <h2 class="card-title">Start a Discussion</h2>
        <p>Have questions or ideas? Join the conversation on GitHub Discussions.</p>
        <div class="card-actions">
          <a href="https://github.com/cywf/Infraguard/discussions" class="btn btn-primary" target="_blank" rel="noopener noreferrer">
            View All Discussions
          </a>
          <a href="https://github.com/cywf/Infraguard/discussions/new" class="btn btn-outline" target="_blank" rel="noopener noreferrer">
            Start New Discussion
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    async function loadDiscussions() {
      try {
        const baseUrl = import.meta.env.BASE_URL;
        const response = await fetch(`${baseUrl}/data/discussions.json`);
        
        if (!response.ok) {
          throw new Error('Failed to load discussions');
        }
        
        const discussions = await response.json();
        const container = document.getElementById('discussions-list');
        
        if (!container) return;
        
        if (discussions.length === 0) {
          container.innerHTML = `
            <div class="alert alert-info">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>No discussions available. Be the first to start one!</span>
            </div>
          `;
          return;
        }
        
        container.innerHTML = discussions.map((discussion: any) => `
          <div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-shadow">
            <div class="card-body">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="card-title text-lg">
                    <a href="${discussion.url}" target="_blank" rel="noopener noreferrer" class="link link-hover">
                      ${discussion.title}
                    </a>
                  </h3>
                  <p class="text-sm opacity-70 mt-2">${discussion.category || 'General'}</p>
                  <div class="flex gap-4 mt-2 text-sm opacity-60">
                    <span>ðŸ‘¤ ${discussion.author || 'Unknown'}</span>
                    <span>ðŸ’¬ ${discussion.comments || 0} comments</span>
                    <span>ðŸ“… ${new Date(discussion.createdAt).toLocaleDateString()}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        `).join('');
      } catch (error) {
        console.error('Error loading discussions:', error);
        const container = document.getElementById('discussions-list');
        if (container) {
          container.innerHTML = `
            <div class="alert alert-warning">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <span>Unable to load discussions. Please visit GitHub directly.</span>
            </div>
          `;
        }
      }
    }
    
    loadDiscussions();
  </script>
</Layout>
