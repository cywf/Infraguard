---
import Layout from '../layouts/Layout.astro';
import MermaidViewer from '../components/MermaidViewer';
---

<Layout title="Infraguard - Visualizer" currentPath="/visualizer">
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <div class="text-sm breadcrumbs mb-6">
      <ul>
        <li><a href={`${import.meta.env.BASE_URL}/`}>Home</a></li>
        <li>Visualizer</li>
      </ul>
    </div>

    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Project Visualizer</h1>
      <p class="text-lg opacity-80">
        Interactive Mermaid diagrams showcasing system architecture and workflows.
      </p>
    </div>

    <MermaidViewer client:load />

    <div class="alert alert-info mt-8">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <h3 class="font-bold">About Diagrams</h3>
        <div class="text-sm">
          Diagrams are discovered from .mmd files in the repository or extracted from README code blocks during CI builds.
        </div>
      </div>
    </div>
  </div>
</Layout>
